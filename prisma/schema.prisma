generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum TaskStatus {
  Pending
  InProgress
  Done
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  status      TaskStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}